<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artist_items"
    android:layout_width="match_parent"
    android:layout_height="216dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="10dp"
    android:background="?selectableItemBackground"
    android:layout_marginVertical="14dp"
    android:layout_marginHorizontal="10dp">

    <RelativeLayout
        android:id="@+id/relative_layout_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/myTint2">

            <ImageView
                android:id="@+id/songImgFav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/music_note"
                android:scaleType="center"
                android:contentDescription="@string/album" />

        </RelativeLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/songNameFav"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/title"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textFontWeight="700"
            android:fontFamily="@font/poppins_rg"
            tools:targetApi="p" />


        <ImageView
            android:id="@+id/favourite_menu"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:paddingHorizontal="6dp"
            android:translationZ="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/more_vert"
            android:contentDescription="@string/more_options"
            app:tint="@color/whiteOrBlack" />

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>