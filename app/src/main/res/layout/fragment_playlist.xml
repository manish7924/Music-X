    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlistRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fadeScrollbars="true"
        android:paddingBottom="20dp"
        android:scrollbars="vertical"
        style="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/no_playlist_found_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/no_playlists_found"
        android:src="@drawable/add_to_playlist"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/no_playlist_found"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/no_playlist_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_rg"
        android:gravity="center"
        android:text="@string/no_playlists_found"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />


    <TextView
        android:id="@+id/no_playlist_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_rg"
        android:gravity="center"
        android:text="@string/no_playlist_des"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="13sp"
        android:visibility="visible"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_playlist_found"
        tools:targetApi="p" />





    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPlaylistBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/new_playlist"
        app:fabSize="normal"
        android:visibility="visible"
        android:tooltipText="@string/new_playlist"
        app:icon="@drawable/add"
        android:src="@drawable/add"
        app:iconSize="50dp"
        style="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="o" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/networkStreamBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/network_stream"
        app:fabSize="mini"
        app:fabCustomSize="40dp"
        android:visibility="visible"
        android:tooltipText="@string/network_stream"
        app:icon="@drawable/insert_link"
        android:src="@drawable/insert_link"
        app:iconSize="50dp"
        style="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/addPlaylistBtn"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="o" />




</androidx.constraintlayout.widget.ConstraintLayout>