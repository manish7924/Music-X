<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:theme="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"
    tools:context=".activities.Favourite">


    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:id="@+id/favouriteLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:background="@drawable/playlist_capsule_fav_bg"
        style="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"
        android:layout_marginHorizontal="26dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/favourite_on"
            android:contentDescription="@string/favourites" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/favourites"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textFontWeight="700"/>

    </com.google.android.material.circularreveal.CircularRevealLinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlistRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fadeScrollbars="true"
        android:paddingBottom="20dp"
        android:scrollbars="vertical"
        style="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favouriteLayout" />

    <TextView
        android:id="@+id/no_songs_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_rg"
        android:gravity="center"
        android:text="@string/coming_soon"
        android:textColor="@color/title"
        android:textFontWeight="700"
        android:textSize="23sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPlaylistBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/new_playlist"
        app:fabSize="normal"
        android:visibility="visible"
        android:tooltipText="@string/new_playlist"
        app:icon="@drawable/add"
        android:src="@drawable/add"
        app:iconSize="50dp"
        style="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="o" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/networkStreamBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/network_stream"
        app:fabSize="mini"
        app:fabCustomSize="40dp"
        android:visibility="visible"
        android:tooltipText="@string/network_stream"
        app:icon="@drawable/insert_link"
        android:src="@drawable/insert_link"
        app:iconSize="50dp"
        style="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/addPlaylistBtn"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="o" />

</androidx.constraintlayout.widget.ConstraintLayout>